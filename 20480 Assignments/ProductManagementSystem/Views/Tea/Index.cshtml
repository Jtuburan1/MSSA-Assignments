@model ProductManagementSystem.Models.IndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(tea => tea.Tea.First().Id)
            </th>
            <th>
                @Html.DisplayNameFor(tea => tea.Tea.First().Name)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Tea) {
        <tr>
            <td>@Html.DisplayFor(teaitem => item.Id)</td>
            <td>@Html.DisplayFor(teaitem => item.Name)</td>
            <td>
                <a asp-action="Details" asp-controller="Tea" asp-route-id="@item.Id">Details</a>
                <a asp-action="Edit" asp-controller="Tea" asp-route-id="@item.Id">Edit</a>
                <a asp-action="Delete" asp-controller="Tea" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
